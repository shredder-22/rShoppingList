<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"

        >
        <TableRow android:background="@drawable/border">
            <TextView android:background="@drawable/border" android:layout_marginLeft="90dp" android:textSize="20dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Product"></TextView>
            <TextView android:background="@drawable/border" android:layout_marginLeft="30dp" android:textSize="20dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="In Cart"></TextView>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="5dp"
        android:hint="info"
        android:id="@+id/info"></Button>

</LinearLayout>